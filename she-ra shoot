import pygame

pygame.init()
gameDisplay = pygame.display.set_mode((800, 600))
pygame.display.set_caption("she-ra shoot")
clock = pygame.time.Clock()

running = True

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
    
    # Acá va tu lógica del juego (mover, disparar, colisiones, etc.)
    
    pygame.display.update()
    clock.tick(60)   # 60 FPS

pygame.quit()
quit()